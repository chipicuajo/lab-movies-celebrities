
<h2>Update a new Movie</h2>

<form action="/movies/{{movie.id}}/edit" method="POST">
    <label for="title">Title</label>
    <input type="text" name="title" value={{movie.title}}>
    
    <label for="genre">Genre</label>
    <input type="text" name="genre" value={{movie.genre}}>
    
    <label for="plot">Plot</label>
    <input type="text" name="plot" value={{movie.plot}}>

    <label for="cast">Cast</label>
    <select name="cast" id="cast" multiple>
        {{#each celebrities}}
        {{#if this.selected}}
              <option value={{this.id}} selected>{{this.name}}</option>
        {{else}}
              <option value={{this.id}}>{{this.name}}</option>
        {{/if}}
        {{/each}}
    </select>
    <button type="Submit">Submit</button>
</form>